---
import "../styles/global.css";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Muhammad Siddiq | Portfolio",
	description = "Portfolio Muhammad Siddiq - Full Stack Developer & Student at Islamic University of Madinah",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<meta name="author" content="Muhammad Siddiq" />
		<meta property="og:type" content="website" />
		<meta
			property="og:url"
			content="https://siddiqmsf.gitlab.io/portfolio"
		/>
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/images/covers/thumb.webp" />

		<meta property="twitter:card" content="summary_large_image" />
		<meta
			property="twitter:url"
			content="https://siddiqmsf.gitlab.io/portfolio"
		/>
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/images/covers/thumb.webp" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class="min-h-screen bg-background text-foreground antialiased selection:bg-primary selection:text-primary"
	>
		<!-- Background Image -->
		<div
			class="fixed inset-0 -z-10 h-full w-full bg-[url('/images/bg.webp')] bg-cover bg-center bg-no-repeat"
		>
			<div
				id="bg-overlay"
				class="absolute inset-0 bg-[#0e1416] transition-opacity duration-1000 ease-in-out"
				style="opacity: 0.9;"
			>
			</div>
		</div>

		<script>
			const overlay = document.getElementById("bg-overlay");
			if (overlay) {
				const updateOpacity = () => {
					// Fade from 0.9 to 0.3 as user scrolls down
					const scrollY = window.scrollY;
					const threshold = 150;
					const opacity = Math.max(
						0.3,
						0.9 - (scrollY / threshold) * 0.6,
					);
					overlay.style.opacity = opacity.toString();
				};

				window.addEventListener("scroll", updateOpacity, {
					passive: true,
				});
				// Initial call
				updateOpacity();
			}
		</script>
		<slot />
	</body>
</html>
